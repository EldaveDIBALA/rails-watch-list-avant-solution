<div class="container mt-5">
  <h1>Nos Films</h1>

  <%= link_to 'Nouveau film', new_movie_path, class: 'btn btn-primary mb-3' %>

  <div class="container">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if movie.poster_url.present? %>
              <%= image_tag movie.poster_url, class: 'card-img-top', alt: movie.title %>
            <% else %>
              <img src="https://via.placeholder.com/300x450" class="card-img-top" alt="Placeholder Image">
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= truncate(movie.overview, length: 100) %></p>
              <p class="card-text"><small class="text-muted">Rating: <%= movie.rating %></small></p>
              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between">
                  <%= link_to 'Show', movie, class: 'btn btn-primary align-self-end' %>
                  <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-secondary align-self-end' %>
                  <%= link_to 'Destroy', movie, method: :destroy, data: { confirm: 'Êtes-vous sûr(e) de vouloir supprimer ?' }, class: 'btn btn-danger align-self-end' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
