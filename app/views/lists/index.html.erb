<div class="container mt-5">
  <h1>Listes des cat√©gories</h1>

  <%= link_to 'Nouvelle liste', new_list_path, class: 'btn btn-primary mb-3' %>

  <div class="list-group">
    <% @lists.each do |list| %>
      <a href="<%= list_path(list) %>" class="list-group-item list-group-item-action mb-3">
        <h5 class="mb-1"><%= list.name %></h5>
      </a>
      <div class="mb-4">
        <%= link_to 'Edit', edit_list_path(list), class: 'btn btn-warning btn-sm mx-1' %>
        <%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mx-1' %>
      </div>
    <% end %>
  </div>
</div>
